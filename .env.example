# ===========================================
# Traefik Template Environment Configuration
# ===========================================
# Copy this file to .env and update with your values

# Domain Configuration
DOMAIN=example.com
# Subdomain for Traefik dashboard (default: traefik.DOMAIN)
SUBDOMAIN_TRAEFIK=traefik.${DOMAIN}
ACME_EMAIL=admin@example.com

# DNS Provider Configuration (for Let's Encrypt DNS Challenge)
# ClouDNS Example - Replace with your provider
CLOUDNS_SUB_AUTH_ID=your_auth_id
CLOUDNS_AUTH_PASSWORD=your_password

# DNS Resolvers for ACME Challenge
# ClouDNS resolvers (use your provider's DNS servers for better reliability)
# Format: "server1:53,server2:53,server3:53,server4:53"
DNS_RESOLVERS=pns31.cloudns.net:53,pns32.cloudns.net:53,pns33.cloudns.net:53,pns34.cloudns.net:53
# Fallback to Quad9 if ClouDNS resolvers fail
DNS_RESOLVERS_FALLBACK=9.9.9.9:53,149.112.112.112:53

# Delay before DNS check (seconds) - useful for slow DNS propagation
# Increase if you get DNS-01 challenge errors
DNS_CHECK_DELAY=30

# Network Configuration
NETWORK_SUBNET_PUBLIC=172.20.0.0/24
NETWORK_SUBNET_FRONTEND=172.21.0.0/24
NETWORK_SUBNET_BACKEND=172.22.0.0/24
NETWORK_SUBNET_MANAGEMENT=172.23.0.0/24

# Traefik Configuration
TRAEFIK_DASHBOARD_ENABLED=true

# Logging Configuration
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_LOG_FORMAT=json
# To enable file logging, uncomment filePath in traefik.yml.template
# To enable access logs, uncomment the accessLog section in traefik.yml.template
# TRAEFIK_ACCESS_LOG_FORMAT=json

# Security Configuration
TRAEFIK_BASIC_AUTH_USER=admin
# Generate with: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_BASIC_AUTH_PASSWORD=$$apr1$$your$$encrypted$$password

# Rate Limiting
RATE_LIMIT_AVERAGE=100
RATE_LIMIT_BURST=50

# Monitoring (Optional)
METRICS_ENABLED=false
METRICS_PORT=8080